# EditorConfig para proyectos Next.js
# MÃ¡s info: https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

[*.{js,jsx,ts,tsx}]
end_of_line = lf
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
max_line_length = 100

[*.{json,md,yml,yaml}]
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
insert_final_newline = true
charset = utf-8
max_line_length = 100

[*.{html,css,scss,less}]
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.{Dockerfile}]
end_of_line = lf
indent_style = space
trim_trailing_whitespace = false

[Makefile]
end_of_line = lf
indent_style = tab
trim_trailing_whitespace = false

# Excepciones: archivos binarios / lock files
[*.{png,gif,jpg,jpeg,ico,svg,woff,woff2,eot,ttf}]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = false

# Node lockfiles
[package-lock.json,yarn.lock,pnpm-lock.yaml]
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = true